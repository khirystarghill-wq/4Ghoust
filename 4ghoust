<script>
/* START DATE */
const startDate = new Date("2026-02-09");

/* HAIKU */
const rawHaikuText = `
The day breaks when you
Wake up from dream and stasis
You are the sunlight

---
I crave your smell and
Taste lingers after you go
Rinse repeat rinse re–

---
Where are my headphones
In my bag,In my coat, Fuck!
Here in my hand. Fuck!

---
I sweat with you most
Can you let me drown in it
No air just sweet trust

---
Pqrincess thickiana
Particular, rare, rare,breed
Best served warm over face

---
I’d say I don’t think
About you while I daydream
It would be a lie
`;

const haikus = rawHaikuText.trim().split('---').map(h => h.trim());
const today = new Date();
today.setHours(0,0,0,0);

const container = document.getElementById("haiku-container");

haikus.forEach((haiku, index) => {
  const revealDate = new Date(startDate);
  revealDate.setDate(startDate.getDate() + index);

  const block = document.createElement("div");
  block.className = "haiku";
  if (today < revealDate) block.classList.add("locked");

  block.innerHTML = `
    <div class="meta">Day ${index + 1} · ${revealDate.toDateString()}</div>
    <div class="text">${haiku}</div>
  `;

  container.appendChild(block);
});

/* UNLOCK FINAL SIGN AFTER LAST DAY */
const lastReveal = new Date(startDate);
lastReveal.setDate(startDate.getDate() + haikus.length - 1);

if (today >= lastReveal) {
  document.getElementById("final-sign").classList.remove("locked");
}

/* INTRO */
document.getElementById("intro").onclick = () => {
  intro.style.display = "none";
  main.style.display = "block";
};
</script>

